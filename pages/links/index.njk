    <p>
        Page created:
        <time datetime="{{ createdDate | readableStringDate }}" title="{{ createdDate | readableStringDate }} (DD/MM/YYYY)">{{ createdDate|readableStringDate }}</time>, last updated:
        <time datetime="{{ modifiedDate | date('yyyy-LL-dd') }}" title="{{ modifiedDate | readableStringDate }} (DD/MM/YYYY)">
            {{ modifiedDate | readableStringDate }}
        </time>
    </p>
</div>